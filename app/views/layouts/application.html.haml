!!!
%html
  %head
    %title= yield :title
    = stylesheets "application"
    = stylesheet_link_tag "facebox"
    = javascript_include_tag :defaults
    = javascript_include_tag "facebox"
    = yield :head
    = csrf_meta_tag
  %body
    -if user_signed_in? && current_user.admin?
      #admin-bar
        .header= link_to "Invites", invitations_path
        .item= link_to "new", new_invitation_path
        .item= link_to "red'md", invitations_path + "?redeemed=yes"
        .item= link_to "not-red'md", invitations_path + "?redeemed=no"
        .header= link_to "Users", users_path
        .header= link_to "Books", books_path
        .item= link_to "active", books_path + "?status=active"
        .item= link_to "review", books_path + "?status=review"
        .item= link_to "published", books_path + "?status=published"
        .item= link_to "destroyed", books_path + "?status=destroyed"
        .header= link_to "Texts", texts_path
        .item= link_to "new", new_text_path
        .item= link_to "trash", trashes_path
        .header= link_to "Authors", authors_path
        .item= link_to "new", new_author_path
      
      
    
    #header
      = yield :navbar
      #artist_session
        - if user_signed_in?
          = "Hello"
          = link_to current_user.first_name, edit_user_registration_path
          ·
          = link_to("sign out",  destroy_user_session_path)
          
          - unless current_user.active_book.nil? || current_user.active_book.text.nil?
            ·  
            = "You are illustrating " 
            = link_to "#{current_user.active_book.title}", edit_book_path(current_user.active_book.id)
          - if current_user.has_books_under_review?
            We are reviewing
            %b= "#{current_user.book_under_review.title}"
          
          
          .session
          
    = yield
    #footer
      2011 &copy; Pictorical Ltd, registered in England #07290547
      = link_to "Legal", legal_path