!!!
%html
  %head
    %title= yield :title
    = stylesheet_link_tag "960", :media => "all"
    = stylesheet_link_tag "reset", :media => "all"
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag :defaults
    = yield :head
    = csrf_meta_tag
  %body
    .container_12
      #header.grid_12
        #title.grid_4.alpha
          %h1
            Pictorical
        #userinfo.grid_8.omega
          - if user_signed_in?
            = "Hello " + current_user.first_name
            ·
            - unless @active_book.nil?
              = link_to "Your book", edit_book_path(@active_book)
              ·
            = link_to "Your info", edit_user_registration_path
            ·
            = link_to("Sign out",  destroy_user_session_path)
      .clear &nbsp;
      .grid_12
        #left_bar.grid_4.alpha
          = yield :navbar
        #main.grid_8.omega
          = yield
      .clear &nbsp
      #footer.grid_12
        = render :partial => "layouts/footer"