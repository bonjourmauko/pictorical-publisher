- title "Pictorical, Illustrate #{@text[:title]} by #{@text[:author]}"

#text-canvas

  #notice
    = notice
  
  #title
    %h1= @text[:title]
    %h3
      %span.up
        = "#{@text.author_name} #{@text.author_last_name}"
  #container
  
    - if can? :new, Text
      .admin
        = link_to "edit", :action => "edit"
  
    #action-box
      20,000 words · 123-344 illustrations
      - unless current_user.has_books_under_review?
        ·
        = illustrate_or_change
        or
        = link_to "choose another", {:action => "index"}, :class => "choose"
      - else
        %br
        Please wait until we publish your book to start illustrating another story


    #story
      = @text[:content].html_safe
    