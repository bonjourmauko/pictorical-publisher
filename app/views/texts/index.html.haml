- title "Pictorical, choose a story"
#notice
  = notice
#text-canvas



  #title
    %h1 Choose a story

  #container
    - @authors.each do |author|
      - if author.texts.count > 0
    
        %h4
          = author.name
          %span.up= author.last_name
        .textlist
          - author.texts.each do |text|
            .onetext
              .textlink= link_to text[:title], text
              .textinfo= "#{text.words_rounded} words ~#{text.pages} pages Â· between #{text.illustrations_lower} and #{text.illustrations_upper} illustrations"
    - if can? :new, Text
      .admin
        = link_to "new", :action => "new"