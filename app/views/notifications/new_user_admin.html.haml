%p= "First name: #{@user.first_name}" if @user.first_name?
%p= "Last name: #{@user.last_name}" if @user.last_name?
%p= "Artistic name: #{@user.artistic_name}" if @user.artistic_name?

%p= "Country: #{@user.country}" if @user.country?

%p= "Birthdate: #{@user.birthdate.to_s}" if @user.birthdate?

%p
  Email:
  = link_to @user.email, @user.email if @user.email?

%p= "Paypal account: #{@user.paypal_account}" if @user.paypal_account?

%p
  Address:
  = @user.address_line_one if @user.address_line_one?
  %br
  = @user.address_line_two if @user.address_line_two?
  %br
  = "City: #{@user.city}" if @user.city?
  %br
  = "State: #{@user.state}" if @user.state?
  %br
  = "Zip: #{@user.zip}" if @user.zip?
  %br
  = "Country: #{@user.country}" if @user.country?

%p
  Portfolio:
  = link_to(@user.portfolio_url,@user.portfolio_url)  if @user.portfolio_url?

%p= "Artschool: #{@user.art_school_name}" if @user.art_school_name?

%p= "Twitter: #{@user.twitter}" if @user.twitter?

%p= "Accepted license agreement: #{@user.accepted_license_agreement.to_s}" if @user.accepted_license_agreement?

%p= "Created at: #{@user.created_at}" if @user.created_at?

