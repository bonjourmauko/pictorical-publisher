- content_for :navbar do
  -if notice
    #notice
      = notice
    
  %h1 Passord forgotten.
  .inner
    = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
      = devise_error_messages!
      .section
        = f.text_field :email
        %br
        Email
      .section
        %p= f.submit "Send me reset password instructions"
