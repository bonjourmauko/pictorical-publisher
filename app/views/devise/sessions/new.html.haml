- content_for :navbar do

  .inner
    -if flash[:alert]
      #alert
        = flash[:alert]
    = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
      .section
        .input
          .label
          %p
            = f.text_field :email
            %br
            &nbsp;Email
      .section
        %p
          = f.password_field :password
          %br
          &nbsp;Password
      .section
        = f.submit "Sign in"


      -# if devise_mapping.rememberable?
        -#%p
          -#= f.check_box :remember_me
          -#= f.label :remember_me
    -#= render :partial => "devise/shared/links"
    .forgot
      = link_to "Help! I forgot my password!", new_password_path(resource_name)