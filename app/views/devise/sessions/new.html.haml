#message-canvas
  #notice
    = notice
  %h1 Welcome to Pictorical

  = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
    .input
      .label
      %p
        = f.text_field :email
        %br
        &nbsp;Email
      %p
        = f.password_field :password
        %br
        &nbsp;Password
      %p
      = f.submit "Sign in"
      %br
      &nbsp;

    -# if devise_mapping.rememberable?
      -#%p
        -#= f.check_box :remember_me
        -#= f.label :remember_me
  -#= render :partial => "devise/shared/links"
  = link_to "Darn, I completely forgot my password (my name is Victor)", new_password_path(resource_name)