- title "All active illustrations"


- content_for :navbar do
  -if notice || params["notice"]
    #notice
      = notice
      = params["notice"]

  -if alert || params["alert"]
    #alert
      = alert
      = params["alert"]
  &nbsp;



#admin-canvas


  - @illustrations.each do |illustration|
    %p
      = link_to illustration.tipe + " #" + illustration.position.to_s, illustration
      %b= "First" if illustration.book.illustrations.active.count == 1
        
      for
      = link_to illustration.book do
        = illustration.book.title
        = "(" + illustration.book.illustrations.active.count.to_s + ")"
      ·
      = time_ago_in_words(illustration.created_at) + " ago"
      = "· status: "+illustration.status unless illustration.status.nil?