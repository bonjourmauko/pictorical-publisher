%div{:id => "cap#{cap.position}"}
  .item
    = link_to cap do
      = image_tag cap.image.url(:i180w), :class => "cap"
  .item
    = render :partial => "illustration_status", :locals => {:illustration => cap}
    = link_to "Change or delete capital", cap, :method => :delete, :confirm => "You are about to delete this illustration. After this you can upload a new one. Are you sure?"
    - if current_user && current_user.admin?
      = link_to "Review", edit_illustration_path(cap), :class => "red"
  - if cap.status == "not"
    .redbox.problems
      %pre= cap.problems
    