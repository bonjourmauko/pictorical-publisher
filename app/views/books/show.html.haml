- title "Book admin"

- javascripts "text"

#text-canvas

  #notice
    = notice

  #title
    %h1= @book.title
    %h3
      written by
      %span.up= "#{@book.author.name} #{@book.author.last_name} (#{@book.author.id})"
    %h3
      illustrated by
      %span.up= "#{@book.user_first_name} #{@book.user_last_name} (#{@book.user.id})"
  #container

    #action-box
      = "#{@book.words} words · #{@book.illustrations_lower}~#{@book.illustrations_upper} illustrations"
      = "status: #{@book.status}"
      = link_to "active", {:action => "revise"},  :class => "illustrate-this-link"
      = link_to "publish", {:action => "publish"},  :class => "illustrate-this-link", :confirm => "Are you sure? Is the book published in the iBookstore? Is the artist/book/author page in pictorical.com set up?"
      = link_to "delete", {:action => "destroy"},  :class => "illustrate-this-link"

    #multitext
      %p
        %b Principal text:
        ="#{@book.principal.title} (#{@book.principal.id})"
      %p
        = form_tag("/books/#{@book.id}/add_text", :method => :get) do
          %b Add text
          = text_field_tag 'text_id'
          = submit_tag 'add'
      %p
        %b Remove text
        - if @book.texts.count > 1
          - @book.texts.each do |text|
            - unless text == @book.principal
              = link_to "#{text.title} (#{text.id})", "/books/#{@book.id}/remove_text?text_id=#{text.id}"

          ·

    #story
    
      = form_tag('http://api2.transloadit.com/assemblies', :multipart => true) do
        = hidden_field_tag :params, @illustration_params.to_json
        %p
          = label_tag :avatar
          %br
          = file_field_tag :avatar
        %p
          = submit_tag
          or #{link_to 'cancel', book_path(@book[:id])}
      :javascript
        var tlProtocol = (('https:' == document.location.protocol) ? 'https://' : 'http://');
        document.write(unescape("%3Cscript src='" + tlProtocol + "assets.transloadit.com/js/jquery.transloadit2.js' type='text/javascript'%3E%3C/script%3E"));
      :javascript
        $(document).ready(function() {
          $('#new_user_form').transloadit();
        });
      
      = @book.content.html_safe
    %h3
      %span.up
        The end